#!/bin/bash
# Log Archive CLI Tool
# 1. Check if argument is provided
if [ -z "$1" ]; then
  echo "Usage: log-archive <log-directory>"
  exit 1
fi

LOG_DIR="$1"

# 2. Check if directory exists
if [ ! -d "$LOG_DIR" ]; then
  echo "Error: Directory does not exist: $LOG_DIR"
  exit 1
fi

# 3. Create archive directory
ARCHIVE_DIR="$HOME/log_archives"
mkdir -p "$ARCHIVE_DIR"

# 4. Timestamp
TIMESTAMP=$(date +"%Y%m%d_%H%M%S")

# 5. Archive filename
ARCHIVE_FILE="logs_archive_${TIMESTAMP}.tar.gz"

# 6. Create archive
# tar -czf "$ARCHIVE_DIR/$ARCHIVE_FILE" -C "$LOG_DIR" . # Original command
tar --no-xattrs -czf "$ARCHIVE_DIR/$ARCHIVE_FILE" -C "$LOG_DIR" . # mod for macOS


# 7. Log archive time
echo "$(date) - Archived $LOG_DIR to $ARCHIVE_FILE" >> "$ARCHIVE_DIR/archive.log"

# 8. Output success message
echo "Archive created:"
echo "$ARCHIVE_DIR/$ARCHIVE_FILE"
